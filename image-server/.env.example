# Image Server Configuration
PORT=3002
NODE_ENV=production

# Upload directory path
# Windows: ./uploads
# Linux VPS: /var/www/comics-images
UPLOAD_DIR=/var/www/comics-images

# Maximum file size in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760

# JWT Secret - MUST match main server's ADMIN_JWT_SECRET exactly!
# Copy the exact same value from server/.env ADMIN_JWT_SECRET
JWT_SECRET=paste-admin-jwt-secret-from-main-server-here

# Image optimization settings
MAX_WIDTH=1200
CONVERT_TO_WEBP=true
WEBP_QUALITY=85
